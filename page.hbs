{{!< default}}
<main>
    {{#post}}
        <header class="small">
            <figure class="full-size thumbnail" style="background-image: url({{feature_image}}"></figure>
            <div class="overlay">
                <div class="content">
                    <h1 class="headline">{{title}}</h1>
                </div>
            </div>
            {{> "wave"}}
        </header>

        <section class="page">
            <div class="content">
                {{content}}
            </div>
        </section>
    {{/post}}

    {{> "discord"}}
</main>

{{#contentFor "scripts"}}
    <script>
        $(function () {
            var $postContent = $(".post-full-content");
            $postContent.fitVids();
        });
    </script>
{{/contentFor}}
